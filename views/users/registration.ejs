<%- include('../layouts/header.ejs') -%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center">User Registration Form</h1>

                    <form id="registrationForm" action="/register" method="post" onsubmit="return validateForm()">
                        <div class="mb-3">
                            <input type="text" name="name" id="name" class="form-control" placeholder="Enter Name" required>
                        </div>
                    
                        <div class="mb-3">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" required>
                        </div>
                    
                        <div class="mb-3">
                            <input type="text" name="mno" id="mno" class="form-control" placeholder="Enter Mobile" required>
                        </div>
                    
                        <div class="mb-3">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" required>
                        </div>
                    
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                    <a href="/login">Login</a>

                    <%
                    if(typeof message !== 'undefined'){
                    %>
                        <p style="color: green;" class="text-center"><%= message %></p>
                    <%
                    }
                    %>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function validateForm() {
        // Get form elements
        var name = document.getElementById('name').value;
        var email = document.getElementById('email').value;
        var mno = document.getElementById('mno').value;
        var password = document.getElementById('password').value;

        // Basic validation
        if (name === "" || email === "" || mno === "" || password === "") {
            alert("All fields must be filled out");
            return false;
        }

        // Additional validation for email format
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            alert("Invalid email format");
            return false;
        }

        // Additional validation for mobile number (assuming a 10-digit number)
        var mnoRegex = /^\d{10}$/;
        if (!mnoRegex.test(mno)) {
            alert("Invalid mobile number format");
            return false;
        }

        return true;
    }
</script>
